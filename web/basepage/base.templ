package basepage

templ BasePage(title string) {
	<html>
		<head>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/static/css/app.css"/>
		</head>
		<body>
			<h1>{ title }</h1>
			<div class="container p-8 min-h-screen min-w-screen bg-red-500 text-white">
				{ children... }
			</div>
		</body>
	</html>
}
